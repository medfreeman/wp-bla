{
  "name": "wp-bla",
  "version": "1.1.1",
  "description": "wordpress plugin for management of voxusini monthly blas",
  "scripts": {
    "postinstall": "npm run install:wpcs",
    "install:wpcs": "npm run rimraf -- wpcs && npm run composer -- create-project wp-coding-standards/wpcs:dev-master --no-dev --keep-vcs",
    "test": "npm run phpcs -- --extensions=php",
    "composer": "php ./node_modules/getcomposer/composer.phar",
    "phpcs": "./wpcs/vendor/bin/phpcs",
    "rimraf": "rimraf"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medfreeman/wp-bla.git"
  },
  "keywords": [
    "wordpress",
    "bla"
  ],
  "author": "Mehdi Lahlou",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/medfreeman/wp-bla/issues"
  },
  "homepage": "https://github.com/medfreeman/wp-bla#readme",
  "devDependencies": {
    "getcomposer": "^1.3.2",
    "pre-commit": "^1.1.3",
    "rimraf": "^2.5.4"
  },
  "pre-commit": [
    "test"
  ]
}
